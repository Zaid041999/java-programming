		int n =11;
		for(int i=1;i<=n;i++) {
			for(int j =1;j<=n;j++) {
				if(i+j==n+1 && j== i/2+1) {
					System.out.print("* ");
				}else {
					System.out.print("  ");
				}
			}
			System.out.println();
		}
	}

